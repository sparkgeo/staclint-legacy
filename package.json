  "dependencies": {
    "bootstrap": "^4.1.3",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.4"
  },
  "devDependencies": {
    "browserify": "^16.2.3",
    "browserify-css": "^0.14.0",
    "http-server": "^0.11.1",
    "watchify": "^3.11.0"

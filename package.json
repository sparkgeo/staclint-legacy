{
  "name": "stac-validator-ui",
  "version": "0.0.1",
  "description": "Validate STAC catalog and/or item json files",
  "main": "",
  "browserify-css": {
    "autoInject": true,
    "minify": true,
    "rootDir": "./"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
